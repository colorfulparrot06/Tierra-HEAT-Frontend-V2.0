{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,  
    "skipLibCheck": true
  },
  "include": ["src"]
}
