{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",         
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strict": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false               
  },
  "include": ["src/**/*"]
}
